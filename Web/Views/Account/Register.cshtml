@model Web.Data.Models.Account.User
@{
    ViewData["Title"] = "ثبت نام";
}
<div class="container">
    <div class="row section-separator">
        <div class="col-sm-12 section-title">
            <h3>ورود / ثبت نام</h3>
        </div>
        <div class="col-sm-12 col-md-6 center">
            <form class="single-form quate-form wow fadeInUp" method="post" asp-controller="Account" asp-action="Register">
                <div id="msgSubmit" class="h3 text-center hidden"></div>
                <div class="row">
                    
                    <div class="col-md-4 col-sm-12">
                        <input class="contact-name form-control" id="name" type="text" placeholder="نام کاربری" asp-for="UserName">
                    </div>

                    <div class="col-md-4 col-sm-12">
                        <input class="contact-name form-control" id="name" type="email" placeholder="ایمیل" asp-for="Email">
                    </div>

                    <div class="col-md-4 col-sm-12">
                        <input class="contact-name form-control" id="name" type="password" placeholder="کلمه عبور" asp-for="Password">
                    </div>

                    <div class="btn-form col-sm-6">
                        <button type="submit" class="btn btn-outline-success btn-block">ثبت نام</button>
                    </div>
                    <div class="btn-form col-sm-6">
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-info btn-block">ورود</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>